<h2><%= title %></h2>
<p class='help'><%= howto %></p>
<%= form_for(:session, url: login_path) do |f| %>
  <p><%= f.label(:user) %><%= f.text_field(:user,
                                           required: true,
                                           autofocus: autofocus) %></p>
  <p><%= f.label(:password) %><%= f.password_field(:password,
                                                   required: true) %></p>
  <%= f.hidden_field(:type, value: type) %>
  <p><%= f.submit("Log in", class: "btn btn-primary") %></p>
<% end %>
